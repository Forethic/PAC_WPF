<Window x:Class="ScreenToGif.Windows.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ScreenToGif.Controls"
        Loaded="Window_Loaded"
        Title="Options" Icon="/ScreenToGif;component/Resources/Logo.ico"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Width"
        Height="360" Width="520"
        MinWidth="520" MinHeight="360">

    <Grid>
        <Label x:Name="OptionsLabel" Content="Options" Margin="5,5,0,0"
               FontSize="24" FontFamily="Segoe UI Semilight" Effect="{StaticResource ShadowEffectDynamic}"
               HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Grid Margin="10,52,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Options -->
            <StackPanel Margin="0" >
                <controls:ImageRadioButton x:Name="AppRadio" Text="Application" Content="{StaticResource Options}" Padding="1,3,5,3" FontSize="18" FontFamily="Segoe UI Semilight" Foreground="#FF2B579A" Cursor="Hand" MaxSize="20" IsChecked="True"/>
                <controls:ImageRadioButton x:Name="ImageRadio" Text="Image" Content="{StaticResource Image}" Padding="1,3,5,3" FontSize="18" FontFamily="Segoe UI Semilight" Foreground="#FF2B579A" Cursor="Hand"  MaxSize="20"/>
                <controls:ImageRadioButton x:Name="AboutRadio" Text="About" Content="{StaticResource Info}" Padding="1,3,5,3" FontSize="18" FontFamily="Segoe UI Semilight" Foreground="#FF2B579A" Cursor="Hand" MaxSize="20"/>
            </StackPanel>

            <!-- All Panels -->
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <!-- Application -->
                <StackPanel x:Name="ApplicationPanel"  Visibility="{Binding IsChecked,ElementName=AppRadio,Converter={StaticResource Bool2VisibilityConverter}}">
                    <CheckBox Content="Remember starup selection." HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="Use the light theme." HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" />
                </StackPanel>

                <!-- Image -->
                <StackPanel x:Name="ImagePanel" Visibility="{Binding IsChecked,ElementName=ImageRadio,Converter={StaticResource Bool2VisibilityConverter}}">
                    <CheckBox Content="TODO" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" />
                </StackPanel>

                <!-- About -->
                <StackPanel x:Name="AboutPanel" Visibility="{Binding IsChecked,ElementName=AboutRadio,Converter={StaticResource Bool2VisibilityConverter}}">
                    <Grid Height="62" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="37*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="43*"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="AboutLabel" Content="Screen To Gif" FontSize="18" FontFamily="Segoe UI Semilight"
                               Effect="{DynamicResource ShadowEffectDynamic}" Margin="0,0,5,0"
                               HorizontalAlignment="Right" VerticalAlignment="Center" Width="111"/>
                        <Image Grid.Column="1" Source="/ScreenToGif;component/Resources/Icons/Tag16x.png" Stretch="None" Margin="0,9,0,0" />
                        <Label x:Name="VersionLabel" Content="Version: 1.5" 
                               FontSize="16" FontFamily="Segoe UI Semilight" Effect="{DynamicResource ShadowEffectDynamic}"
                               VerticalContentAlignment="Center"
                               Grid.Column="2" />
                        <Label x:Name="LinkLabel" FontSize="14"
                               HorizontalAlignment="Right" Cursor="Hand"
                               Grid.Row="1" Grid.Column="0">
                            <Hyperlink NavigateUri="https://screentogif.codeplex.com" RequestNavigate="Hyperlink_RequestNavigate" >screentogif.codeplex.com</Hyperlink>
                        </Label>
                        <Label x:Name="AuthorLabel" Content="Author: Nicke Manarin"
                               Grid.Column="2" Grid.Row="1" 
                               FontSize="16" FontFamily="Segoe UI Semilight"
                               VerticalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>

        <controls:ImageButton x:Name="OkButton" IsCancel="True"
                              Click="OkButton_Click"
                              Text="OK" Content="{StaticResource Ok}"
                              Effect="{StaticResource ShadowEffectDynamic}"
                              HorizontalAlignment="Right" VerticalAlignment="Bottom"
                              Margin="0,0,10,10" 
                              MinWidth="104" MinHeight="27"/>
    </Grid>

</Window>